/**index.wxss**/
swiper{
  height: 421rpx;
}
swiper-item image{
  width: 100%;
  height: 100%;
}
/* 精选主题部分 */
.select_title,.newest_title{
  width: 100%;
  padding: 30rpx 0;
  height: 40rpx;
  color: #c40d2e;
  text-align: center;
  animation: tit .5s infinite
}
@keyframes tit{
  0%{
    color: red;
  }
  25%{
    color: green;
  }
  50%{
    color: #ab956d;
  }
  75%{
    color: #29be92;
  }
  100%{
    color: #333;
  }
}
.select_top,.select_bottom{
  width: 100%;
  height: 375rpx;
}
.select_top_small{
  width: 375rpx;
  height: 375rpx;
  float: left;
}
.select_top_small image{
  width: 375rpx;
  height: 375rpx;
  display: block;
}
.select_bottom image{
  width: 100%;
  height: 375rpx

}
.list_box{
  padding: 30rpx 20rpx;
}
.newest_list{
  float: left;
  width: 347rpx;
  height: 347rpx;
  margin: 0 15rpx 10rpx 0;
  border-radius: 10px;
  text-align: center;
  background-color: #f5f6f5;
  padding-bottom: 10px
}
.newest_list:nth-child(2){
  margin-right: 0;
}
.newest_list image{
  width: 180rpx;
  height: 180rpx;
  margin: 30px 0 20rpx;
}
.newest_list .newest_text{
  font-size: 32rpx;
  line-height: 45rpx
}
