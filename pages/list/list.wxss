.banner image{
  width: 100%;
  height: 400rpx;
  display: block
}
.list_box{
  padding: 30rpx 20rpx;
}
.newest_list{
  display: inline-block;
  width: 347rpx;
  height: 347rpx;
  margin: 0 15rpx 10rpx 0;
  border-radius: 10px;
  text-align: center;
  background-color: #f5f6f5;
  padding-bottom: 10px
}
.newest_list:nth-child(2){
  margin-right: 0;
}
.newest_list image{
  width: 180rpx;
  height: 180rpx;
  margin: 30px 0 20rpx;
}
.newest_list .newest_text{
  font-size: 32rpx;
  line-height: 45rpx
}